<div class="m-5">
  <h1><%= @restaurant.name %></h1>
  <br>
  <h3><strong>Address:</strong> <%= @restaurant.address %></h3>
  <h3><strong>Phone number:</strong> <%= @restaurant.phone_number %></h3>
  <h3><strong>Category:</strong> <%= @restaurant.category %></h3>
  <br>
  <h3><strong>Reviews</strong></h3>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
  <ul>
   <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %></li>
      <li class="list-group-item"><%= review.content %></li>
      <% end %>
   </ul>
  <%= link_to "Back to restaurants", restaurants_path(@restaurant) %>
</div>
